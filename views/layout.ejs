<!DOCTYPE html>
<!-- Website Template by freewebsitetemplates.com -->
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <link
      rel="stylesheet"
      type="text/css"
      href="/css/mobile.css"
      media="screen and (max-width : 568px)"
    />
    <link
      rel="shortcut icon"
      type="image/png"
      href="/images/icons/icon-mustache.png"
    />
    <script type="text/javascript" src="/js/mobile.js"></script>
  </head>
  <body>
    <div id="header">
      <a href="/" class="logo">
        <img src="/images/logo.jpg" alt="" />
      </a>
      <ul id="navigation">
        <li class="<%- path === '/' ? 'selected' : '' %>">
          <a href="/">home</a>
        </li>
        <li class="<%- path.includes('about') ? 'selected' : '' %>">
          <a href="/about">about</a>
        </li>
        <li
          class="<%- path.includes('styles') && !path.includes('favorite') ? 'selected' : '' %>"
        >
          <a href="/styles">gallery</a>
        </li>
        <li class="<%- path.includes('blog') ? 'selected' : '' %>">
          <a href="/blog">blog</a>
        </li>
        <li class="<%- path.includes('contacts/new') ? 'selected' : '' %>">
          <a href="/contacts/new">contact</a>
        </li>
        <% if (isLoggedIn && user.admin === true) { %>
        <li
          class="<%- path.includes('contacts') && !path.includes('contacts/new') ? 'selected' : '' %>"
        >
          <a href="/contacts">contact requests</a>
        </li>
        <li class="<%- path.includes('admin-privileges') ? 'selected' : '' %>">
          <a href="/auth/admin-privileges">User Privillages</a>
        </li>

        <% } %>
        <li class="<%- path.includes('taylor-swift') ? 'selected' : '' %>">
          <a href="/api/taylor-swift-albums">Taylor Swift!!</a>
        </li>
        <li class="<%- path.includes('recent-favs') ? 'selected' : '' %>">
          <a href="/auth/recent-favs">Live Favorites Feed</a>
        </li>
        <% if (isLoggedIn) { %>
        <li class="<%- path.includes('favorite-styles') ? 'selected' : '' %>">
          <a href="/auth/favorite-styles">Your Favorite Styles</a>
        </li>
        <li class="<%- path.includes('auth/lougout') ? 'selected' : '' %>">
          <a href="/auth/logout">Logout</a>
        </li>
        <% } else { %>
        <li class="<%- path.includes('auth') ? 'selected' : '' %>">
          <a href="/auth">Login</a>
        </li>
        <% } %>
      </ul>
    </div>
    <div id="body">
      <% if (user) { %>
      <h2>Welcome, <%= user.firstName %>!</h2>
      <% } %> <%- body %>
    </div>
    <div id="footer"><%- include('partials/social.ejs') %></div>
  </body>
</html>
